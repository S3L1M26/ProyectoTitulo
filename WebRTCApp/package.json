{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "build:prod": "vite build --config vite.config.production.js",
        "dev": "vite",
        "preview": "vite preview --config vite.config.production.js",
        "deploy:build": "npm run build:prod && php artisan optimize && php artisan config:cache && php artisan route:cache && php artisan view:cache",
        "test:e2e:setup": "bash scripts/setup-e2e.sh",
        "test:e2e": "playwright test",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:chromium": "playwright test --project=chromium",
        "test:e2e:report": "playwright show-report tests/e2e/results/html",
        "test:e2e:docker": "docker compose run --rm playwright npx playwright test",
        "test:e2e:docker:chromium": "docker compose run --rm playwright npx playwright test --project=chromium",
        "test:e2e:docker:headed": "docker compose run --rm playwright npx playwright test --headed",
        "test:e2e:docker:ui": "docker compose run --rm playwright npx playwright test --ui"
    },
    "devDependencies": {
        "@headlessui/react": "^2.0.0",
        "@inertiajs/react": "^2.0.0",
        "@playwright/test": "^1.56.1",
        "@tailwindcss/forms": "^0.5.3",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.21",
        "axios": "^1.7.4",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^1.2.0",
        "postcss": "^8.5.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.4.17",
        "terser": "^5.44.0",
        "vite": "^6.0.11"
    },
